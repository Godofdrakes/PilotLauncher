<UserControl
	x:Class="PilotLauncher.PropertyGrid.PropertyGridView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:PilotLauncher.PropertyGrid"
	mc:Ignorable="d"
	d:DesignHeight="300" d:DesignWidth="300">
	<DataGrid
		IsReadOnly="True"
		AutoGenerateColumns="False"
		VerticalScrollBarVisibility="Auto"
		HorizontalScrollBarVisibility="Disabled"
		ItemsSource="{Binding PropertyItems, Mode=OneWay,
			RelativeSource={RelativeSource AncestorType=local:PropertyGridView}}">
		<DataGrid.Columns>
			<DataGridTextColumn x:Name="PropertyNameColumn"
				Header="Name" Width="SizeToCells"
				Binding="{Binding PropertyInfo.Name, Mode=OneTime}" />
			<DataGridTextColumn x:Name="PropertyTypeColumn"
				Header="Type" Width="SizeToCells"
				Binding="{Binding PropertyInfo.PropertyType.Name, Mode=OneTime}" />
			<DataGridTemplateColumn x:Name="PropertyValueColumn"
				Header="Value" MinWidth="80" Width="*" />
		</DataGrid.Columns>
	</DataGrid>
</UserControl>